generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roles {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  description   String
  status        Boolean
  permissions   Json      @default("{}")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  users         Users[]   @relation("RoleToUsers")
}

model Users {
  id            Int       @id @default(autoincrement())
  fullname      String
  birth_date    Date
  email         String    @unique
  password      String
  status        Boolean
  roleId        Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt  
  role          Role      @relation(fields: [roleId], references: [id], name: "RoleToUsers")
  Tasks         Tasks[]   @relation("UsersToTasks")
  @@index([roleId])
}

model Tasks {
  id            Int     @id @default(autoincrement())
  title         String
  description   String
  done          Boolean
  owner         Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt  
  user          Users     @relation(fields: [owner], references: [id], name: "UserToTasks")
  @@([owner])
}
